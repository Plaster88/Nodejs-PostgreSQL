{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": false,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "newLine": "LF",
    "typeRoots": [
      "lib"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
